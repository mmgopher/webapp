<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Users</title>
</head>
<body>
{{template "header"}}
<h1>Create User</h1>
<form method="post" action="/users/update">
    <table>
        <tr>
            <th>Login</th>

            <td><input type="text" name="login" placeholder="login" required autofocus ></td>
        </tr>
        <tr>
            <th>Password</th>

            <td><input type="text" name="password" placeholder="password" required ></td>
        </tr>
        <tr>
            <th>First name</th>
            <td> <input type="text" name="first" placeholder="first" required ></td>
        </tr>
        <tr>
            <th>Last name</th>
            <td>  <input type="text" name="last" placeholder="last" required ></td>
        </tr>
        <tr>
            <th>Age</th>
            <td>  <input type="text" name="age" placeholder="age" required></td>
        </tr>
    </table>
    <input type="submit">
</form>
{{template "footer"}}
</body>
</html>